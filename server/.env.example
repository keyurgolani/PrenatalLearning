# MongoDB Configuration
# For local development without Docker:
MONGODB_URI=mongodb://localhost:27017/prenatal-learning-hub
# For Docker Compose (with authentication):
# MONGODB_URI=mongodb://admin:password@mongodb:27017/prenatal-learning-hub?authSource=admin
MONGODB_DB_NAME=prenatal-learning-hub

# JWT Configuration (REQUIRED - change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REMEMBER_ME_EXPIRES_IN=30d

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
