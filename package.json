{
  "name": "prenatal-learning-hub",
  "private": true,
  "version": "1.4.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "typecheck": "tsc --noEmit",
    "generate:manifests": "npx tsx scripts/generateManifests.ts",
    "server:dev": "npm run dev --prefix server",
    "server:build": "npm run build --prefix server",
    "server:start": "npm run start --prefix server",
    "server:test": "npm run test --prefix server",
    "server:lint": "npm run lint --prefix server",
    "docker:dev": "COMPOSE_BAKE=0 docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:detach": "COMPOSE_BAKE=0 docker compose -f docker-compose.dev.yml up --build -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:rebuild": "COMPOSE_BAKE=0 docker compose -f docker-compose.dev.yml up --build -d frontend backend",
    "docker:dev:rebuild:frontend": "COMPOSE_BAKE=0 docker compose -f docker-compose.dev.yml up --build -d frontend",
    "docker:dev:rebuild:backend": "COMPOSE_BAKE=0 docker compose -f docker-compose.dev.yml up --build -d backend",
    "docker:prod": "docker compose up",
    "docker:prod:detach": "docker compose up -d",
    "docker:prod:down": "docker compose down",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:logs:frontend": "docker compose -f docker-compose.dev.yml logs -f frontend",
    "docker:logs:backend": "docker compose -f docker-compose.dev.yml logs -f backend",
    "docker:logs:db": "docker compose -f docker-compose.dev.yml logs -f mongodb",
    "docker:restart": "docker compose -f docker-compose.dev.yml restart",
    "docker:restart:frontend": "docker compose -f docker-compose.dev.yml restart frontend",
    "docker:restart:backend": "docker compose -f docker-compose.dev.yml restart backend",
    "docker:restart:db": "docker compose -f docker-compose.dev.yml restart mongodb",
    "docker:shell:backend": "docker compose -f docker-compose.dev.yml exec backend sh",
    "docker:shell:db": "docker compose -f docker-compose.dev.yml exec mongodb mongosh -u admin -p",
    "docker:db:status": "docker compose -f docker-compose.dev.yml exec mongodb mongosh -u admin -p --eval 'db.adminCommand(\"ping\")'",
    "docker:status": "docker compose -f docker-compose.dev.yml ps",
    "docker:clean": "docker compose -f docker-compose.dev.yml down -v --rmi local",
    "docker:clean:volumes": "docker compose -f docker-compose.dev.yml down -v",
    "docker:clean:all": "docker compose -f docker-compose.dev.yml down -v --rmi all --remove-orphans",
    "k8s:dev:preview": "kubectl kustomize k8s/overlays/dev",
    "k8s:dev:build": "docker build -t prenatal-learning:dev . && docker build -t prenatal-learning-backend:dev ./server",
    "k8s:dev:apply": "kubectl apply -k k8s/overlays/dev",
    "k8s:dev:delete": "kubectl delete -k k8s/overlays/dev",
    "k8s:dev:status": "kubectl get all -n prenatal-learning-dev",
    "k8s:prod:preview": "kubectl kustomize k8s/overlays/prod",
    "k8s:prod:apply": "kubectl apply -k k8s/overlays/prod",
    "k8s:prod:delete": "kubectl delete -k k8s/overlays/prod",
    "k8s:prod:status": "kubectl get all -n prenatal-learning-prod"
  },
  "dependencies": {
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.10.1",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.16"
  }
}
